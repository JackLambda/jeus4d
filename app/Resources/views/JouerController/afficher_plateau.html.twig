        .numero {
            color: #cccccc;
            font-weight: bold;
            display: inline-block;
            width: 100%;
            text-align: center;
            font-size: 30px;
            height: 100%;
            vertical-align: middle;
        }
    </style>
{% endblock %}


{% block body %}

    <div id="plateau">



    <div class="container-fluid" id="body" style="float: none; margin: 0 auto;">
        {% if partie.gagnant == true %}
            <div class="container login-sec col-md-4">
